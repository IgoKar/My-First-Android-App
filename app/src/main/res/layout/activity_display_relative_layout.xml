<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your name below:"
            android:textSize="20sp" android:layout_alignParentStart="true" android:layout_marginStart="10dp"
            android:layout_alignParentTop="true" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" android:textColor="@color/textColor"/>
    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="First name:"
            android:layout_marginTop="60dp"
            android:textSize="20dp"
            android:layout_marginStart="10dp" android:textColor="@color/textColor"/>

    <EditText
            android:id="@+id/lastNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView1"
            android:layout_marginTop="90dp" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"
            android:layout_alignParentEnd="true" android:layout_marginEnd="12dp" android:layout_marginStart="12dp"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20dp"
            android:text="Last name:"
            android:textSize="20dp" android:layout_marginLeft="10dp" android:textColor="@color/textColor"/>
    <EditText
            android:id="@+id/firstNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/textView2"
            android:layout_marginTop="50dp" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginEnd="12dp" android:layout_marginStart="12dp"/>

    <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginTop="26dp"
            android:text="Show" android:insetLeft="6dp" android:insetRight="6dp"
            android:layout_alignParentStart="true" android:layout_marginStart="-1dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:onClick="sendFullName"
            android:minHeight="48dp" android:textColor="@color/buttonTextColor"
            android:backgroundTint="@color/buttonColor"/>
</RelativeLayout>