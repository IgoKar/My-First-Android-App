<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Enter your name below:"
            android:textSize="16sp"
            android:id="@+id/txtVw" android:textColor="@color/textColor"/>

    <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Name"
            android:inputType="text" android:textColor="@color/textColor"/>

    <Button
            android:id="@+id/showInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="show"
            android:textColor="@color/buttonTextColor" android:onClick="sendName" android:insetLeft="6dp"
            android:insetRight="6dp" android:backgroundTint="@color/buttonColor"/>

</androidx.appcompat.widget.LinearLayoutCompat>